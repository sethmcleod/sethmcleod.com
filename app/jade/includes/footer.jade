mixin nav-item(name, url)
  a(href=url)= name
  
mixin color-bar()
  case pageTitle
    when "Home"
      .color-bar.blue-green
    when "About"
      .color-bar.pink-orange
    when "Resume"
      .color-bar.purple-blue
    when "Contact"
      .color-bar.green-yellow
    default
      .color-bar
      
footer
